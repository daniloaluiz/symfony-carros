{% extends "::base.html.twig"%}
{% block body %}
    <div class="container">
        <h1>Marcas e modelos</h1>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <td>Modelo</td>
                    <td>Marca</td>
                    <td>Ação</td>
                </tr>
            </thead>
            <tbody>
                {% for carro in carros %}
                    <tr>
                        <td>{{ carro.modelo }}</td>
                        <td>{{ carro.fabricante.nome }}</td>
                        <td>
                            <button href="#" class="btn btn-danger">Remover</button>
                            &nbsp;|&nbsp;
                            <button href="#" class="btn btn-primary">Editar</button>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>    
        </table>
    </div>
{% endblock %}
