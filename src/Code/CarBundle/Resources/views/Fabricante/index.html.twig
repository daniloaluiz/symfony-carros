{% extends "::base.html.twig" %}

{% block title %}Fabricantes{% endblock %}

{% block body %}
   <div class="container">
        <h1>Nossos fabricantes de carros</h1>
        {% if is_granted('ROLE_ADMIN') %}
         <a href="{{ url('fabricante_new') }}" class="btn btn-default">Novo fabricante</a>
       {% endif %}
         <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Nome</td>
                    {% if is_granted('ROLE_ADMIN') %}
                    <td>Ação</td>
                      {% endif %}
                </tr>
            </thead>
            <tbody>
                {% for fabricante in fabricantes %}
                    <tr>
                        <td>{{ fabricante.id }}</td>
                        <td>{{ fabricante.nome }}</td>
                         {% if is_granted('ROLE_ADMIN') %}
                        <td>
                            <a href="{{path('fabricante_edit',{'id':fabricante.id})}}" class="btn btn-danger">Editar</a>
                            &nbsp;|&nbsp;
                            <a href="{{path('fabricante_delete',{'id':fabricante.id})}}" class="btn btn-primary">Deletar</a>
                        </td>
                          {% endif %}
                    </tr>
                {% endfor %}
            </tbody>    
        </table>
    </div>
{% endblock %}